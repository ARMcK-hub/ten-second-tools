{
    "$schema": "http://json-schema.org/schema",
    "title": "READMD Config",
    "description": "READMD Configuration Schema",
    "type": "object",
    "required": [
        "user",
        "repositories"
    ],
    "properties": {
        "user": {
            "type": "object",
            "description": "Repository Host Detail",
            "required": [
                "repoHost",
                "accountName",
                "yourName",
                "linkedInAccount",
                "email",
                "portrait"
            ],
            "properties": {
                "repoHost": {
                    "type": "string",
                    "default": "github",
                    "examples": [
                        "github",
                        "gitlab"
                    ]
                },
                "accountName": {
                    "type": "string"
                },
                "yourName": {
                    "type": "string"
                },
                "linkedInAccount": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "portrait": {
                    "type": "string"
                }
            }
        },
        "repositories": {
            "type": "array",
            "description": "List of repositories with configurable metadata",
            "items": {
                "$ref": "#/definitions/repository"
            }
        }
    },
    "definitions": {
        "namedLink": {
            "type": "object",
            "required": [
                "name",
                "link"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                }
            }
        },
        "repository": {
            "type": "object",
            "description": "Repository Metadata",
            "required": [
                "name",
                "title",
                "image",
                "description",
                "body",
                "features",
                "technologies",
                "acknowledgements"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the repository, as defined in searchable URI."
                },
                "title": {
                    "type": "string",
                    "description": "The name that will be displayed on the Markdown file"
                },
                "link": {
                    "type": "string",
                    "description": "URI link to project - typically hosted App, or Home page"
                },
                "image": {
                    "type": "string",
                    "description": "URI to featured image that will be displayed - representing the product"
                },
                "description": {
                    "type": "string",
                    "description": "The tagline description of the project"
                },
                "body": {
                    "type": "string",
                    "description": "The markdown formated text that will be the main body of the README"
                },
                "features": {
                    "type": "array",
                    "description": "List of features or benefits",
                    "items": {
                        "type": "string",
                        "description": "A benefit for feature of the product"
                    }
                },
                "technologies": {
                    "type": "array",
                    "description": "List of technologies as namedLinks",
                    "items": {
                        "$ref": "#/definitions/namedLink"
                    }
                },
                "acknowledgements": {
                    "type": "array",
                    "description": "List of acknowledgable parties as namedLinks",
                    "items": {
                        "$ref": "#/definitions/namedLink"
                    }
                }
            }
        }
    }
}